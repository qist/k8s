error_log stderr notice;
{{ $servers := split (getenv "CPU_NUM") "," }}{{range $servers}}
worker_processes {{.}};
{{end}}
master_process on;
worker_priority 1;
worker_shutdown_timeout 10s;
worker_rlimit_nofile 4096;
events {
  multi_accept on;
  use epoll;
  worker_connections 4096;
}

stream {
        upstream kube_apiserver {
            {{ $servers := split (getenv "CP_HOSTS") "," }}{{range $servers}}
            server {{.}}:BACKEND_PORT;
            {{end}}
            check interval=1000 rise=2 fall=3 timeout=2000 default_down=true type=tcp;
        }

        server {
          {{ $servers := split (getenv "HOST_PORT") "," }}{{range $servers}}
            listen        {{.}} so_keepalive=on;
            listen        [::]:{{.}} ipv6only=on so_keepalive=on;
            {{end}}
            proxy_socket_keepalive on;
            proxy_buffer_size 512k;
            proxy_pass    kube_apiserver;
            proxy_timeout 3600;
            proxy_connect_timeout 2s;

        }

}

http {
    server {
        listen 8404;

        # stats interface
        location /stats {
            healthcheck_status;
        }
        # metrics interface
        location /metrics {
            healthcheck_status prometheus;
        }
    }
}